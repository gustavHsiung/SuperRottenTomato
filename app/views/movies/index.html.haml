-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include: 
  = @select_rating
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1,@select_rating.include?(rating)
  = submit_tag 'Refresh'
%table#movies
  %thead
    %tr
      %th{:id =>"title_header", :class => "#{@title_class}"}=link_to 'Movie Title', movies_path(:order=>:title)
      %th Rating
      %th{:id =>"release_date_header", :class => "#{@release_date_class}"}= link_to 'Release Date', movies_path(:order=>:release_date)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
